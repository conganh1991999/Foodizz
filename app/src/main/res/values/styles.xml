<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- App Components -->

    <style name="App.CardView" parent="Widget.MaterialComponents.CardView">

    </style>

    <style name="App.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/news_cycle</item>
    </style>

    <style name="App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>

    <style name="App.ContainedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/info_button_corner_radius</item>
        <item name="rippleColor">@color/rippleColorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/news_cycle</item>
    </style>

    <style name="App.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="cornerRadius">@dimen/info_button_corner_radius</item>
        <item name="rippleColor">@color/rippleColorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/news_cycle</item>
    </style>

    <style name="App.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">@dimen/info_button_corner_radius</item>
        <item name="iconTint">@color/colorAccent</item>
        <item name="rippleColor">@color/rippleColorSecondary</item>
    </style>

    <style name="App.RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:rating">4.6</item>
        <item name="android:scaleX">0.25</item>
        <item name="android:scaleY">0.25</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <!-- Login and Register -->
    <style name="App.CardView.CardInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/info_card_corner_radius</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/info_card_margin_bottom</item>
    </style>

    <style name="App.TextInputLayout.Info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/info_edit_text_height</item>
        <item name="android:layout_marginStart">@dimen/info_edit_text_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/info_edit_text_horizontal_margin</item>
    </style>
    <!-- -->

    <!-- Fragment Home -->
    <style name="App.TextView.ListHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- -->

    <!-- Food Item -->
    <style name="App.CardView.CardFood">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="cardCornerRadius">@dimen/food_card_corner_radius</item>
        <item name="rippleColor">@color/rippleColorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="FoodImage">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:src">@drawable/mock_food_square2</item>
    </style>

    <style name="App.TextView.FoodName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:text">@string/mock_food_name</item>
    </style>

    <style name="App.TextView.FoodRate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:text">@string/mock_rate</item>
    </style>

    <style name="App.RatingBar.FoodRatingBar">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">2</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="FoodLikeCheckBox">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:button">@drawable/favourite</item>
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="App.TextView.FoodPrice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/mock_food_price</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!-- -->

    <!-- Restaurant Item -->
    <style name="App.CardView.CardRestaurant">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="rippleColor">@color/rippleColorPrimary</item>
    </style>

    <style name="RestaurantLogo">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/mock_logo_res</item>
    </style>

    <style name="App.TextView.RestaurantName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/mock_restaurant_name</item>
    </style>

    <style name="App.TextView.RestaurantRate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:text">@string/mock_rate</item>
    </style>

    <style name="App.RatingBar.RestaurantRatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="App.TextView.RestaurantNumOfRate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">168dp</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/mock_num_of_rate</item>
    </style>

    <style name="App.TextView.RestaurantCategory">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@color/grayBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FocusIcon">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:src">@drawable/ic_focus</item>
    </style>

    <style name="App.TextView.RestaurantAddress">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/mock_restaurant_address</item>
    </style>

    <!-- -->

</resources>
