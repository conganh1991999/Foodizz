<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHomeRestaurant"
        android:layout_width="324dp"
        android:layout_height="120dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="15dp"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/rippleColor">

        <ImageView
            android:id="@+id/imgHomeRestaurantLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:src="@drawable/domino" />

        <TextView
            android:id="@+id/txtHomeRestaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Hut"
            android:textStyle="bold"
            android:layout_marginStart="88dp"
            android:textSize="18sp"
            android:fontFamily="@font/news_cycle"/>

        <RatingBar
            android:id="@+id/rbHomeRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="10dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4.6"
            android:scaleX="0.25"
            android:scaleY="0.25"
            android:stepSize="0.5"
            android:progressTint="@color/themeColor"/>

        <TextView
            android:id="@+id/txtHomeRestaurantRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.6"
            android:fontFamily="@font/news_cycle"
            android:layout_marginStart="88dp"
            android:layout_marginTop="27dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtHomeRestaurantRateNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(240K)"
            android:fontFamily="@font/news_cycle"
            android:layout_marginStart="176dp"
            android:layout_marginTop="26dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtHomeRestaurantCategory1"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="Pizza"
            android:fontFamily="@font/news_cycle"
            android:textSize="12sp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="56dp"
            android:background="@color/categoryBackground"
            android:padding="2dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtHomeRestaurantCategory2"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="Fruits"
            android:fontFamily="@font/news_cycle"
            android:textSize="12sp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="56dp"
            android:background="@color/categoryBackground"
            android:padding="2dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtHomeRestaurantCategory3"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="Grilled"
            android:fontFamily="@font/news_cycle"
            android:textSize="12sp"
            android:layout_marginStart="232dp"
            android:layout_marginTop="56dp"
            android:background="@color/categoryBackground"
            android:padding="2dp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/focus"
            android:layout_marginStart="40dp"
            android:layout_marginTop="95dp"/>

        <TextView
            android:id="@+id/txtHomeRestaurantHowFar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.2 KM Away"
            android:fontFamily="@font/news_cycle"
            android:textSize="12sp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="90dp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/clock"
            android:layout_marginStart="156dp"
            android:layout_marginTop="95dp"/>

        <TextView
            android:id="@+id/txtHomeRestaurantHowLong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 Minute Delivery"
            android:fontFamily="@font/news_cycle"
            android:textSize="12sp"
            android:layout_marginStart="176dp"
            android:layout_marginTop="90dp" />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>