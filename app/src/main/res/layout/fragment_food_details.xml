<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RatingBar
        android:id="@+id/rbFoodDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5"
        android:progressTint="@color/themeColor"
        android:rating="4.6"
        android:scaleX="0.25"
        android:scaleY="0.25"
        android:stepSize="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDetailOfFood" />

    <TextView
        android:id="@+id/txtDetailOfFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/news_cycle"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="If you are hungry for success, food content marketing could be
the answer. Food puns are as irresistible as mom's apple pie. There's no denying that good
food-related content has the potential draw in the crowds. If you are hungry for success,
food content marketing could be the answer."
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.nex3z.notificationbadge.NotificationBadge
        android:id="@+id/foodBadge"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="end"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddToBag"
        app:nbBackground="@drawable/badge_number"
        app:nbMaxTextLength="2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddToBag"
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/themeColor"
        android:fontFamily="@font/news_cycle"
        android:text="Add to Bag"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rbFoodDetail"
        app:rippleColor="@color/rippleColor" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnIncreaseFood"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/themeColor"
        android:textSize="24sp"
        app:cornerRadius="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAddToBag"
        app:layout_constraintTop_toBottomOf="@+id/rbFoodDetail"
        app:rippleColor="#FFEBEE" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDecreaseFood"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/themeColor"
        android:textSize="24sp"
        app:cornerRadius="28dp"
        app:layout_constraintEnd_toStartOf="@+id/btnAddToBag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rbFoodDetail"
        app:rippleColor="#FFEBEE" />

</androidx.constraintlayout.widget.ConstraintLayout>